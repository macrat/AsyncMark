{
  "name": "asyncmark",
  "version": "0.3.6",
  "description": "A benchmarking library that supports Promise.",
  "main": "dist/asyncmark",
  "types": "index.d.ts",
  "unpkg": "dist/asyncmark.min.js",
  "files": [
    "README.md",
    "LICESNSE",
    "dist",
    "index.d.ts"
  ],
  "scripts": {
    "test": "npm-run-all test:*",
    "test:eslint": "npm-run-all test:eslint:*",
    "test:eslint:scripts": "eslint src/*.js examples/*.js build.js",
    "test:eslint:tests": "eslint --global \"describe,it\" test/*.js",
    "test:mocha": "cross-env NODE_ENV=development nyc --require @babel/register --reporter lcov --reporter text mocha",
    "build": "npm-run-all build:*",
    "build:dist": "cross-env NODE_ENV=production node build.js",
    "build:docs": "cross-env NODE_ENV=production esdoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/macrat/AsyncMark.git"
  },
  "keywords": [
    "benchmark",
    "benchmarking",
    "promise",
    "asynchronous",
    "async"
  ],
  "author": "MacRat <m@crat.jp> (https://blanktar.jp)",
  "license": "MIT",
  "bugs": "https://github.com/macrat/AsyncMark/issues",
  "homepage": "https://macrat.github.io/AsyncMark/",
  "devDependencies": {
    "@babel/core": "7.10.3",
    "@babel/plugin-transform-runtime": "7.10.3",
    "@babel/preset-env": "7.10.3",
    "@babel/register": "7.10.3",
    "@babel/runtime": "7.10.3",
    "babel-preset-power-assert": "3.0.0",
    "cross-env": "7.0.2",
    "esdoc": "1.1.0",
    "esdoc-importpath-plugin": "1.0.2",
    "esdoc-standard-plugin": "1.0.0",
    "eslint": "7.3.1",
    "mocha": "8.0.1",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "power-assert": "1.6.1",
    "rollup": "2.18.1",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-terser": "6.1.0"
  },
  "runkitExample": "const AsyncMark = require('asyncmark');\n\nnew AsyncMark.Benchmark(function() {\n    return new Promise((resolve, reject) => {\n        setTimeout(resolve, 100);\n    });\n}).run().catch(console.error);\n",
  "esdoc": {
    "source": "./src",
    "destination": "./docs",
    "plugins": [
      {
        "name": "esdoc-standard-plugin",
        "option": {
          "test": {
            "source": "./test/",
            "includes": [
              ".*\\.js$"
            ]
          }
        }
      },
      {
        "name": "esdoc-importpath-plugin",
        "option": {
          "replaces": [
            {
              "from": "^.*$",
              "to": "dist/asyncmark.mjs"
            }
          ]
        }
      }
    ]
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          "@babel/preset-env",
          "power-assert"
        ],
        "plugins": [
          "@babel/plugin-transform-runtime"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "rules": {
      "arrow-body-style": [
        "warn",
        "as-needed"
      ],
      "arrow-parens": [
        "warn",
        "as-needed"
      ],
      "eqeqeq": "error",
      "indent": [
        "error",
        4
      ],
      "init-declarations": [
        "error",
        "always"
      ],
      "no-catch-shadow": "warn",
      "no-console": "off",
      "no-floating-decimal": "error",
      "no-implicit-coercion": "error",
      "no-label-var": "error",
      "no-self-compare": "error",
      "no-shadow": "error",
      "no-template-curly-in-string": "warn",
      "no-throw-literal": "error",
      "no-unused-vars": "off",
      "no-var": "error",
      "prefer-const": "warn",
      "prefer-promise-reject-errors": "error",
      "quotes": [
        "warn",
        "single"
      ],
      "space-before-blocks": [
        "warn",
        {
          "functions": "always",
          "keywords": "always",
          "classes": "always"
        }
      ],
      "valid-jsdoc": "warn",
      "yoda": "warn"
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    }
  }
}
